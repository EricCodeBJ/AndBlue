<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f8fa"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:textColor="#096ddb" />

    <TextView
        android:layout_height="wrap_content"
        android:text="The simple Android library to manage interactions with the bluetooth module."
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#24292f" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pickDevice"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="#0969da"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Pick device"/>


    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:text="Connected to"
        android:gravity="center"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif-black"
        android:textSize="16sp"
        android:textColor="#24292f" />
    <TextView
        android:id="@+id/connectTo"
        android:layout_height="wrap_content"
        android:text="Connected to"
        android:gravity="center"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:textColor="#0969da" />

    <EditText
        android:id="@+id/sendEditext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="Message to sent..."
        android:gravity="start"
        android:textColor="@color/black"
        android:background="@drawable/input_2"
        android:layout_marginVertical="10dp"
        android:padding="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sendMessage"
        android:layout_width="match_parent"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:background="#2da44e"
        android:textColor="@color/white"
        android:text="Envoyer"/>

    <TextView
        android:id="@+id/readEditext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:text="No message"
        android:hint="Receive message"
        android:fontFamily="sans-serif-medium"
        android:gravity="start"
        android:layout_weight="1"
        android:textSize="18sp"
        android:background="@drawable/input_1"
        android:layout_marginVertical="10dp"
        android:padding="10dp"/>


</LinearLayout>